@model TestTask.Models.Order

@{
    ViewData["Title"] = "Create order";
}

<h1>Please, create a new order</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SenderCity" class="control-label"></label>
                <input asp-for="SenderCity" class="form-control" />
                <span asp-validation-for="SenderCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SenderAdress" class="control-label"></label>
                <input asp-for="SenderAdress" class="form-control" />
                <span asp-validation-for="SenderAdress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceiverCity" class="control-label"></label>
                <input asp-for="ReceiverCity" class="form-control" />
                <span asp-validation-for="ReceiverCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceiverAdress" class="control-label"></label>
                <input asp-for="ReceiverAdress" class="form-control" />
                <span asp-validation-for="ReceiverAdress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PickupDate" class="control-label"></label>
                <input asp-for="PickupDate" class="form-control" />
                <span asp-validation-for="PickupDate" class="text-danger"></span>
            </div>
            
            <div class="form-group" style="padding-top:10px;">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
